<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.everpresentwindow"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.everpresentwindow.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.everpresentwindow.MyActivity" />
        <activity android:name="com.jawsware.interactiveoverlay.SampleOverlayShowActivity" />
        <activity android:name="com.jawsware.interactiveoverlay.SampleOverlayHideActivity" />

        <service android:name="com.jawsware.interactiveoverlay.SampleOverlayService" />
    </application>

</manifest>
